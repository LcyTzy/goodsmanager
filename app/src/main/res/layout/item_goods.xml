<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_bg_selector"
    android:layout_margin="6dp"
    android:padding="12dp">

    <!-- 1. 商品名称（手机上显示的大标题） -->
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="天然气专用油 (10万) (10W..."
    android:textColor="#333333"
    android:textSize="16sp"
    android:textStyle="bold"
    android:maxLines="1"
    android:ellipsize="end"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toStartOf="@id/tv_price" />

    <!-- 2. 价格（右上角红色文字） -->
    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¥390.33"
    android:textColor="#FF4444"
    android:textSize="15sp"
    android:textStyle="bold"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />

    <!-- 3. 系列+规格（名称下方的小字） -->
    <TextView
        android:id="@+id/tv_series_spec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="系列：天然气专用油(10万)|规格：18L1"
    android:textColor="#666666"
    android:textSize="12sp"
    android:layout_marginTop="4dp"
    app:layout_constraintTop_toBottomOf="@id/tv_name"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />

    <!-- 4. 分类（系列下方的小字） -->
    <TextView
        android:id="@+id/tv_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="分类：柴机油"
    android:textColor="#666666"
    android:textSize="12sp"
    android:layout_marginTop="4dp"
    app:layout_constraintTop_toBottomOf="@id/tv_series_spec"
    app:layout_constraintStart_toStartOf="parent" />

    <!-- 5. 库存操作区（减号+数量+加号） -->
    <LinearLayout
        android:id="@+id/ll_stock"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
    app:layout_constraintTop_toBottomOf="@id/tv_category"
    app:layout_constraintStart_toStartOf="parent">

        <!-- 减号按钮（替换成这个） -->
        <Button
            android:id="@+id/btn_minus"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="-"
            android:textColor="#000000"
            android:textSize="18sp"
            android:backgroundTint="#EEEEEE"
            android:padding="0dp"
            android:minWidth="0dp"
        android:minHeight="0dp"/>

    <!-- 库存数量 -->
    <TextView
        android:id="@+id/tv_stock"
        android:layout_width="32dp"
        android:layout_height="match_parent"
        android:text="10"
        android:gravity="center"
        android:background="#FFFFFF"
        android:textSize="14sp" />

        <!-- 加号按钮（替换成这个） -->
        <Button
            android:id="@+id/btn_plus"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="+"
            android:textColor="#000000"
            android:textSize="18sp"
            android:backgroundTint="#EEEEEE"
            android:padding="0dp"
            android:minWidth="0dp"
            android:minHeight="0dp"/>
</LinearLayout>

    <!-- 6. 操作按钮（详情/编辑/删除） -->
<LinearLayout
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:orientation="horizontal"
android:layout_marginStart="16dp"
app:layout_constraintTop_toTopOf="@id/ll_stock"
app:layout_constraintBottom_toBottomOf="@id/ll_stock"
app:layout_constraintStart_toEndOf="@id/ll_stock"
app:layout_constraintEnd_toEndOf="parent">

    <Button
        android:id="@+id/btn_detail"
        android:layout_width="65dp"
        android:layout_height="32dp"
        android:backgroundTint="#7B61FF"
        android:paddingHorizontal="12dp"
        android:text="详情"
        android:textColor="#FFFFFF"
        android:textSize="12sp" />

    <Button
        android:id="@+id/btn_edit"
        android:layout_width="63dp"
        android:layout_height="32dp"
        android:layout_marginStart="8dp"
        android:backgroundTint="#7B61FF"
        android:paddingHorizontal="12dp"
        android:text="编辑"
        android:textColor="#FFFFFF"
        android:textSize="12sp" />

    <Button
        android:id="@+id/btn_delete"
        android:layout_width="66dp"
        android:layout_height="32dp"
        android:layout_marginStart="8dp"
        android:backgroundTint="#FF4444"
        android:paddingHorizontal="12dp"
        android:text="删除"
        android:textColor="#FFFFFF"
        android:textSize="12sp" />
</LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
