<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="@drawable/item_bg_selector"
    android:layout_margin="4dp"
    android:orientation="horizontal"
    android:gravity="end"
    app:layout_constraintTop_toBottomOf="@id/ll_stock"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="8dp"
    >

    <!-- 商品名称 -->
<TextView
android:id="@+id/tv_name"
android:layout_width="0dp"
android:layout_height="wrap_content"
android:textSize="16sp"
android:textStyle="bold"
app:layout_constraintTop_toTopOf="parent"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toStartOf="@id/tv_price"
android:maxLines="1"
android:ellipsize="end" />

    <!-- 价格（红色高亮） -->
<TextView
android:id="@+id/tv_price"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:textColor="@color/red"
android:textSize="14sp"
android:text="¥0.00"
app:layout_constraintTop_toTopOf="parent"
app:layout_constraintEnd_toEndOf="parent" />

    <!-- 系列 + 规格（灰色小字） -->
<TextView
android:id="@+id/tv_series_spec"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:textSize="12sp"
android:textColor="@color/gray"
android:maxLines="1"
android:ellipsize="end"
app:layout_constraintTop_toBottomOf="@id/tv_name"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent" />

    <!-- 分类（灰色小字） -->
<TextView
android:id="@+id/tv_category"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:textSize="12sp"
android:textColor="@color/gray"
app:layout_constraintTop_toBottomOf="@id/tv_series_spec"
app:layout_constraintStart_toStartOf="parent" />

    <!-- 库存操作区 -->
<LinearLayout
android:id="@+id/ll_stock"
android:layout_width="wrap_content"
android:layout_height="30dp"
android:orientation="horizontal"
android:gravity="center"
android:background="@drawable/bg_stock_rounded"
app:layout_constraintTop_toBottomOf="@id/tv_category"
app:layout_constraintStart_toStartOf="parent"
android:layout_marginTop="4dp">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_minus"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:background="@drawable/btn_stock_selector"
        android:text="-"
        android:textSize="14sp" />

<TextView
    android:id="@+id/tv_stock"
    android:layout_width="40dp"
    android:layout_height="match_parent"
    android:text="10"
    android:gravity="center"
    android:textSize="14sp"
    android:background="@android:color/white" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_plus"
        android:layout_width="41dp"
        android:layout_height="match_parent"
        android:background="@drawable/btn_stock_selector"
        android:text="+"
        android:textSize="14sp" />
</LinearLayout>

    <!-- 操作按钮组 -->
<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal"
android:gravity="end"
app:layout_constraintBottom_toBottomOf="parent"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent"
android:layout_marginTop="8dp">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_detail"
        android:layout_width="63dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_secondary_selector"
        android:paddingHorizontal="12dp"
        android:text="详情"
        android:textSize="12sp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_edit"
        android:layout_width="66dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:background="@drawable/btn_secondary_selector"
        android:paddingHorizontal="12dp"
        android:text="编辑"
        android:textSize="12sp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_delete"
        android:layout_width="74dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:background="@drawable/btn_danger_selector"
        android:paddingHorizontal="12dp"
        android:text="删除"
        android:textColor="@color/red"
        android:textSize="12sp" />
</LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>