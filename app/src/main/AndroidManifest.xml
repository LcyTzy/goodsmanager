<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.goodsmanagerapp">

    <!-- 权限：本项目无网络/存储权限需求，可省略 -->
    <uses-permission android:name="android.permission.INTERNET" /> <!-- 可选 -->

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_tb"
        android:label="@string/app_name"
    android:roundIcon="@mipmap/ic_launcher_round"
    android:supportsRtl="true"
    android:theme="@style/Theme.GoodsManagerApp">

    <!-- 主活动（入口） -->
    <activity
        android:name=".MainActivity"
        android:theme="@style/AppTheme"
        android:exported="true">
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
    </activity>

    <!-- 详情页活动 -->
    <activity
        android:name=".GoodsDetailActivity"
        android:exported="false" />

    <!-- 添加/编辑页活动 -->
    <activity
        android:name=".GoodsEditActivity"
        android:exported="false" />
</application>

    </manifest>